doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    if env.DEVMODE
      link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
      script(src='/javascripts/jquery.min.js')
      script(src='/javascripts/bootstrap.min.js')
    else
      link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='container')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            nav.nav.flex-column.text-center.mx-2.p-2.bg-light.border.rounded
              a.nav-link(href='/catalog') Catalog
              a.nav-link(href='/catalog/goods') Goods
              a.nav-link(href='/catalog/genres') Genres
              a.nav-link(href='/catalog/works') Works
              a.nav-link(href='/catalog/goods/create') New
              h3.p-3 &#x2766;
        div(class='col-sm-10 p-3')
          block content
